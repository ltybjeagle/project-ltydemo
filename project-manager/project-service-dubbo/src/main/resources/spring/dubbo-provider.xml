<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="${dubbo.application.name}"/>

    <dubbo:registry address="${dubbo.application.registry.address}"/>

    <dubbo:protocol name="${dubbo.application.protocol.name}" port="${dubbo.application.protocol.port}" />
    
    <dubbo:service interface="com.liuty.maven.facade.dubbo.UserFacade" ref="userFacade"/>

    <bean id="userFacade" class="com.liuty.maven.facade.UserFacadeImpl"/>
</beans>