<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunny.maven.user.mapper.RoleMapper">

    <select id="selectRolesByUserId" parameterType="String" resultType="com.sunny.maven.user.entity.Role">
        select * from fasp_t_carole where guid in (
        select roleguid from fasp_t_causerrole where userguid = #{userId})
    </select>
</mapper>